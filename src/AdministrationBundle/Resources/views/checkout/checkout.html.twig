{% extends 'adminbase.html.twig' %}

{% block body_id %}

{% endblock %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <fieldset>
                <legend>Checkout {{ checkout.id }} <span style="float: right; margin-right: 70px;">{{ checkout.status }}</span></legend>
                <table class="table table-striped table-hover text-center">
                    <tr>
                        <th>User</th>
                        <td>{{ checkout.orders[0].user.email }}</td>
                        <td>{{ checkout.orders[0].user.city }}</td>
                        <td>{{ checkout.orders[0].user.address }}</td>
                        <td>{{ checkout.orders[0].user.telephone }}</td>
                    </tr>
                    <tr>
                        <th>Products</th>
                        <th class="text-center">Name</th>
                        <th class="text-center">Quantity</th>
                        <th class="text-center">Price</th>
                        <th class="text-center">Total price</th>
                    </tr>
                    {%  for order in checkout.orders %}
                        <tr>
                            <td></td>
                            <td>{{ order.product.name }}</td>
                            <td>{{ order.productQuantity }}</td>
                            <td>{{ order.product.price }}</td>
                            <td>{{ order.product.price * order.productQuantity }}$</td>
                        </tr>
                    {% endfor %}
                    <tr >
                        <td colspan="5">
                            <a href="{{ path('change_status', {'id': checkout.id}) }}" style="float: right; margin: 1px;" class="btn btn-primary">Complete Order</a>
                            <a href="{{ path('list_checkouts') }}" style="float: right; margin: 1px;" class="btn btn-primary">Go back</a>
                        </td>
                    </tr>
                </table>
            </fieldset>
        </div>
    </div>
{% endblock %}